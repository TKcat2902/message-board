<!--メッセージ一覧 表示箇所-->

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    
    <div class="panel panel-info">
      
      <div class="panel-heading">
      <p>メッセージ一覧</p>
      </div>
      
      <div class="panel-body">
      
        <% @messages.each do |message| %>
        
        <!--名前の入力をラベルで出している-->
        <span class="label label-info"><%= message.name %></span>
    
        <!--メッセージ本文の表示-->
        <%= message.body %>
        <br>
        <% end %>
    
      </div>
      
　　</div>
　　
    <div class="col-sm-3"></div>
  </div><!-- col-sm-->
</div><!-- row-->





<!--名前&メッセージ入力箇所-->


<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>


<!--名前入力欄-->
  <div class="form-group">
    <label for="inputName" class="col-sm-4 control-label">名前</label>
    <div class="col-sm-4">

     <%= f.text_field :name, class:"form-control", id:"inputName", placeholder:"名前" %>

    </div>
    <div class="col-sm-4"></div>
    
  </div>


<!--内容入力欄-->
  <div class="form-group">
    <label for="inputMessage"  class="col-sm-4 control-label">メッセージ</label>
    <div class="col-sm-4">

    <%= f.text_area :body, class:"form-control", id:"inputMessage", placeholder:"メッセージ" %>

    </div>
    <div class="col-sm-4"></div>
   
  </div>


<!--送信ボタン-->
  <div class="form-group">
   <div class="col-sm-offset-8 col-sm-4">

   <%= f.submit "送信", class: "btm btm-sm btn-primary" %>

   </div>
  </div>


  
<% end %>



    



